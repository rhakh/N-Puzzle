NAME = npuzzle

OS = $(shell uname -s)

SRC =   main.cpp \

SRCDIR = ./src/

OBJDIR = ./obj/

OBJ = $(addprefix $(OBJDIR),$(SRC:.cpp=.o))

ifeq ($(OS),Linux)
    CFLAGS += -Wall -Wextra -Werror -fPIC `pkg-config --cflags QtDeclarative QtGui QtScript QtDesignerComponents  Qt5Test Qt5Core QtCore Qt5UiTools Qt5Gui Qt5WaylandCompositor Qt5X11Extras    QtUiTools  Qt5Widgets Qt5Concurrent  `
    LFLAGS += `pkg-config --libs QtDeclarative QtGui QtScript QtDesignerComponents  Qt5Test Qt5Core QtCore Qt5UiTools Qt5Gui Qt5WaylandCompositor Qt5X11Extras    QtUiTools  Qt5Widgets Qt5Concurrent  `
endif

ifeq ($(OS),Darwin)
    CFLAGS += -Wall -Wextra -Werror sdfdsf
    LFLAGS += afaf
endif


all: obj $(NAME)

obj:
	mkdir -p $(OBJDIR)

$(OBJDIR)%.o:$(SRCDIR)%.cpp
	g++ $(CFLAGS) -o $@ -c $< $(LFLAGS)

$(NAME): $(OBJ)
	g++ $(CFLAGS) -o $(NAME) $(OBJ) $(LFLAGS)

clean:
	/bin/rm -rf $(OBJDIR)

fclean: clean
	/bin/rm -f $(NAME)

re: fclean all
